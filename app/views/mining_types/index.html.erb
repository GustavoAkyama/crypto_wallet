<div class="container-fluid">
  <h1 style="padding-left: 7px;"><%="#{t('titles.mining_type')}"%></h1>

  <table class="table table-hover table-borderless" style="width: 430px;">
    <thead>
      <tr>
        <th> <%= @mining_types.human_attribute_name(:description) %> </th>
        <th style="padding-left: 15px;"> <%= @mining_types.human_attribute_name(:acronym) %> </th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @mining_types.each do |mining_type| %>
        <tr>
          <td><%= mining_type.description %></td>
          <td align="center"><%= mining_type.acronym %></td>
          <td><%= link_to "#{t('links.show')}", mining_type, class:"btn btn-custom btn-sm", role:"button" %></td>
          <td><%= link_to "#{t('links.edit')}", edit_mining_type_path(mining_type), class:"btn btn-custom btn-sm", role:"button" %></td>
          <td><%= link_to "#{t('links.delete')}", mining_type, class:"btn btn-custom btn-sm", role:"button", method: :delete, data: { confirm: t('messages.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "#{t('register.mining_type')}", new_mining_type_path, class:"btn btn-primary btn-sm", role:"button" %>
  <%= link_to "#{t('home')}", root_path(), class:"btn btn-custom btn-sm", role:"button" %>
</div>