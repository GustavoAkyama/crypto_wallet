<%= form_with(model: mining_type, local: true) do |form| %>
  <div class="container-fluid">
    <% if mining_type.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(mining_type.errors.count, "error") %> prohibited this mining_type from being saved:</h2>

        <ul>
        <% mining_type.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :description, style: "margin-bottom: 5px;" %>
