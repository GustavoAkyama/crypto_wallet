    </div>

    <div class="mb-3">
      <%= form.label :acronym, style: "margin-bottom: 5px;" %>
      <%= form.text_field :acronym, class: "form-control", placeholder: "Ex: PoW",style: "width: 300px;" %>
    </div>

    <div class="button-container">
        <%= form.submit nil, class: "btn btn-primary btn-sm", role: "button" %>
        <%= link_to t('links.back'), mining_types_path, class: "btn btn-custom btn-sm", role: "button" %>
    </div>
  </div>
<% end %>
