<%= form_with(model: coin, local: true) do |form| %>
  <div class="container-fluid">
    <% if coin.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

        <ul>
        <% coin.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :description, style: "margin-bottom: 5px;" %>
      <%= form.text_field :description, class: "form-control", placeholder: "Ex: Bitcoin", style: "width: 300px;" %>
    </div>

    <div class="mb-3">
      <%= form.label :acronym, style: "margin-bottom: 5px;" %>
      <%= form.text_field :acronym, class: "form-control", placeholder: "Ex: BTC", style: "width: 300px;"  %>
    </div>

    <div class="mb-3">
      <%= form.label :url_image, style: "margin-bottom: 5px;" %>
      <%= form.text_field :url_image, class: "form-control", style: "width: 300px;" %> 
      <%#= image_tag coin.url_image, size: "20x20" %>
    </div>

    <div class="mb-3">
      <%= form.label :mining_type_id, style: "margin-bottom: 5px;" %>
      <div style="width: 300px;">
        <%= form.select(:mining_type_id, @mining_type_options, { include_blank: t('messages.select') }, { class: "form-control" }) %>
      </div>
    </div>

    <div class="button-container">
      <%= form.submit nil, class: "btn btn-primary btn-sm", role: "button" %>
      <%= link_to t('links.back'), coins_path, class: "btn btn-custom btn-sm", role: "button" %>
    </div>
  </div>
<% end %>
