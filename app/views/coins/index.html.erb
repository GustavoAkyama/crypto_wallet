<div class="container-fluid">
  <h1 style="padding-left: 7px;"><%="#{t('titles.coin')}"%></h1>

  <table class="table table-hover table-borderless" style="width: 600px;" >
    <thead>
      <tr>
        <th> <%= @coins.human_attribute_name(:description) %> </th>
        <th> <%= @coins.human_attribute_name(:acronym) %> </th>
        <th> Imagem </th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @coins.each do |coin| %>
        <tr>
          <td><%= coin.description %></td>
          <td style="padding-left: 12px;"><%= coin.acronym %></td>
          <td style="padding-left: 30px;"> <%= image_tag coin.url_image, size: "20x20" %> </td>
          <td><%= link_to "#{t('links.show')}", coin, class:"btn btn-custom btn-sm", role:"button" %></td>
          <td><%= link_to "#{t('links.edit')}", edit_coin_path(coin), class:"btn btn-custom btn-sm", role:"button" %></td>
          <td><%= link_to "#{t('links.delete')}", coin, class:"btn btn-custom btn-sm", role:"button", method: :delete, data: { confirm: t('messages.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "#{t('register.coin')}", new_coin_path, class:"btn btn-primary btn-sm", role:"button" %>
  <%= link_to "#{t('home')}", root_path(), class:"btn btn-custom btn-sm", role:"button" %>

</div>