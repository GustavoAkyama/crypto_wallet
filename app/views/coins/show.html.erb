<h1 style="padding-left: 7px;"><%= t('showing.coin') %></h1>

<div class="container-fluid">
  <p>
    <strong><%= t('attributes.description')%>:</strong>
    <%= @coin.description %>
  </p>

  <p>
    <strong><%= t('attributes.acronym')%>:</strong>
    <%= @coin.acronym %>
  </p>

  <p>
    <strong><%= t('attributes.url_image')%>:</strong>
    <%= image_tag @coin.url_image, size: "20x20" %>
  </p>

  <%= link_to t('links.edit'), edit_coin_path(@coin), class:"btn btn-primary btn-sm", role:"button" %>
  <%= link_to t('links.back'), coins_path, class:"btn btn-custom btn-sm", role:"button" %>
</div>